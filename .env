# Environment variables for the Todo App

# App Configuration
VITE_APP_NAME=Corporate Todo Manager
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Professional task management with corporate design

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Animation Configuration
VITE_ENABLE_ANIMATIONS=true
VITE_ANIMATION_DURATION=300

# Storage Configuration
VITE_STORAGE_KEY=corporate-todo-app
VITE_AUTO_SAVE=true
VITE_AUTO_SAVE_INTERVAL=5000

# Feature Flags
VITE_ENABLE_CATEGORIES=true
VITE_ENABLE_PRIORITIES=true
VITE_ENABLE_DUE_DATES=true
VITE_ENABLE_SEARCH=true
VITE_ENABLE_FILTERS=true
VITE_ENABLE_STATS=true

# UI Configuration
VITE_ITEMS_PER_PAGE=50
VITE_SHOW_COMPLETED_BY_DEFAULT=false
VITE_ENABLE_BULK_ACTIONS=true

# Corporate Branding
VITE_BRAND_PRIMARY_COLOR=#0f172a
VITE_BRAND_SECONDARY_COLOR=#64748b
VITE_BRAND_ACCENT_COLOR=#3b82f6